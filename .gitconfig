[user]
	name = Lukasz Strzalkowski
	email = lukasz.strzalkowski@gmail.com
[color]
	ui = always
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	logallrefupdates=true
	fsmonitor = true
	untrackedCache = true
	pager = delta
[alias]
	co = checkout
	ci = commit
	cia = commit --amend --no-edit
	ca = commit -am
	co = checkout
	st = status -sb
	s = show --ext-diff
	diffc = diff --cached
	plre = pull --rebase
	ps = push
	psf = push --force-with-lease
	cp = cherry-pick
	l = log --pretty='%C(yellow)%h %C(cyan)%cd %Cblue%aN%C(auto)%d %Creset%s' --graph --date=relative --date-order
	recent = "!sh git-recent"
	sl = "!sh git-stash-list"
	sw = "!sh git-switch-main"
[color "diff"]
	meta = blue
	frag = magenta
	old = red
	new = green
[color "branch"]
	current = green bold
	local = blue
	remote = yellow
	plain = red bold
[color "status"]
	added = green
	changed = yellow
	untracked = blue
[github]
	user = lukaszx0
[push]
	default = current
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[advice]
	skippedCherryPicks = false
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
[merge]
	conflictStyle = zdiff3
